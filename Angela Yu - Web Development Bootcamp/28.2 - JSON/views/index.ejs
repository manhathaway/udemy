<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <div id="title">
    <h1>🌮</h1>
    <h1>Taco Town</h1>
  </div>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="chicken" name="choice">🍗</button>
    <button type="submit" value="beef" name="choice">🥩</button>
    <button type="submit" value="fish" name="choice">🐟</button>
  </form>

  <div id="recipeContainer" class="hidden">
    <% if (locals.recipe) { %>
      <h1 id="recipeTitle"><%= recipe.name %></h1>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <% const firstLetter = (name) => { return name.charAt(0) + name.slice(1).toLowerCase() }; %>
        
        <% const protein = recipe.ingredients.protein.name; %>
        <% const preparation = recipe.ingredients.protein.preparation; %>
        <% const salsa = recipe.ingredients.salsa.name; %>
        <% const spice = recipe.ingredients.salsa.spiciness; %>

        <li><%= `${firstLetter(preparation)} ${protein.toLowerCase()}.` %></li>
        <li><%= `${firstLetter(salsa)} (${spice.toLowerCase()}).` %></li>

        <% for (let i = 0; i < recipe.ingredients.toppings.length; i++) { %>
          <% const topping = recipe.ingredients.toppings[i].name; %>
          <% const quantity = recipe.ingredients.toppings[i].quantity; %>
          
          <li><%= `${firstLetter(topping)} (${quantity.toLowerCase()}).` %></li>
        <% }; %>
      </ul>
    <% } else { %>
      <h2>Pick your favourite taco ingredient. 👆</h2>
    <% }; %>
  </div>
</body>

</html>