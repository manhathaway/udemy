<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">You've Discovered My Secret!</h1>
      <p class="secret-text">
        <%= secret %>
      </p>

      <form id="secret-form" style="display: none; gap: 3px" action="/submit" method="POST">
          <input id="secret-text" class="form-control" name="secret" placeholder="Type your secret here."/>
          <input type="submit" class="btn btn-dark" value="Submit">
      </form>
      
      <hr>

      <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
      <a class="btn btn-dark btn-lg text-light" role="button" onclick="handleClick()">Submit a Secret</a>
    </div>
  </div>

  <script>
    let counter = false;
    const handleClick = () => {
      counter = !counter;
      if (counter) {
        document.getElementById('secret-form').style.display = 'flex';
      } else {
        document.getElementById('secret-form').style.display = 'none';
      };
    };
  </script>

  <%- include('partials/footer') %>